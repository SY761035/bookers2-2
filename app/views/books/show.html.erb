<div class='container'>
  <div class="d-flex justify-content-center mb-2">
    <%= render "searches/form" %>
  </div>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @show_book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@show_book.user) do %>
            <%= image_tag @show_book.user.get_profile_image, size:"100x100" %><br>
            <%= @show_book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @show_book.title, @show_book %></td>
          <td id="favorite_btn_<%= @book.id %>">
          <td><%= @show_book.body %></td>
          <td><%= render "favorites/btn", book: @show_book %></td>
          <td id="comment_counter">
             <%= render "book_comments/counter", book: @show_book %>
          </td>
          <% if @show_book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@show_book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @show_book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <div id="comment_index">
         <%= render "book_comments/index", book: @show_book %>
      </div>
      <%= render "book_comments/form", book: @show_book, book_comment: @book_comment %>
    </div>
  </div>
</div>